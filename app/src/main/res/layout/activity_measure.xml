<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="fr.montpelliertechhub.abctestchronometer.road.RoadActivity">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="@string/app_name"/>

    <fr.montpelliertechhub.abctestchronometer.utils.ChronometerView
        android:id="@+id/chronometerView"
        android:text="Start"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp">

        <Chronometer
            android:id="@+id/timerChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="40sp"
            tools:text="00:00"/>

    </fr.montpelliertechhub.abctestchronometer.utils.ChronometerView>

    <Button
        android:id="@+id/timerButton"
        android:text="@string/action_start"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/stopButton"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/action_stop"/>


</LinearLayout>
